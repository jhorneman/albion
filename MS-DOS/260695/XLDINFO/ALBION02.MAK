	$(Pdir)\XLDLIBS\AUTOMGFX &
	$(Pdir)\XLDLIBS\TACTICON &
	$(Pdir)\ALBION.EXE

!endif

Extra_files = $(Compiler) $(Makefile)

# This is the main "target"

ALL : $(XLD_files)

# These are the XLD-files coming from Jurie

!ifeq User Jurie

# Compile for Jurie

$(Pdir)\XLDLIBS\PALETTE0.XLD : $(Pdir)\DATA\PALETTES\???.PAL $(Extra_files)
	$(Compiler) PALETTES

$(Pdir)\XLDLIBS\PARTGR0.XLD : $(Pdir)\DATA\PARTGR\PARTGR.??? $(Extra_files)
	$(Compiler) PARTGR

$(Pdir)\XLDLIBS\PARTKL0.XLD : $(Pdir)\DATA\PARTKL\PARTKL.??? $(Extra_files)
	$(Compiler) PARTKL

$(Pdir)\XLDLIBS\NPCGR0.XLD : $(Pdir)\DATA\NPCGR\NPC2DG.??? $(Extra_files)
	$(Compiler) NPCGR

$(Pdir)\XLDLIBS\NPCKL0.XLD : $(Pdir)\DATA\NPCKL\NPC2DK.??? $(Extra_files)
	$(Compiler) NPCKL

$(Pdir)\XLDLIBS\MONGFX0.XLD : $(Pdir)\DATA\MONGFX\MONGFX.??? $(Extra_files)
	$(Compiler) MONGFX

